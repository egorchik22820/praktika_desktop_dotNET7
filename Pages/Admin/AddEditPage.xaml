<Page x:Class="praktika_desktop_dotNET7.Pages.Admin.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="{Binding PageTitle}">

    <Grid Background="#FFF" Margin="20">
        <ScrollViewer>
            <StackPanel>
                <!-- Кнопка назад -->
                <Button Content="Назад"
                        HorizontalAlignment="Left"
                        Width="80"
                        Height="30"
                        Margin="0 0 0 20"
                        Background="#3A84F4"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Click="BackButton_Click"/>

                <!-- Заголовок страницы -->
                <TextBlock Text="{Binding PageTitle}"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0 0 0 20"/>

                <!-- Форма редактирования -->
                <Border Background="#FFF"
                        CornerRadius="10"
                        Padding="20"
                        BorderBrush="#DDD"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Левая часть - изображение -->
                        <StackPanel Grid.Column="0" Width="300" Margin="0 0 20 0">
                            <!-- Превью изображения -->
                            <Border Width="300"
                                    Height="200"
                                    CornerRadius="10"
                                    Background="#F5F5F5"
                                    BorderBrush="#DDD"
                                    BorderThickness="1">
                                <Image Source="{Binding ServiceImage}"
                                       Stretch="UniformToFill"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                    <Image.Clip>
                                        <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,300,200"/>
                                    </Image.Clip>
                                </Image>
                            </Border>

                            <!-- Кнопка загрузки изображения -->
                            <Button Content="Выбрать изображение"
                                    Margin="0 10 0 0"
                                    Click="SelectImageButton_Click"/>
                        </StackPanel>

                        <!-- Правая часть - форма -->
                        <StackPanel Grid.Column="1">
                            <!-- Название -->
                            <TextBlock Text="Название услуги:" Margin="0 0 0 5"/>
                            <TextBox Text="{Binding CurrentService.Title}"
                                     FontSize="14"
                                     Padding="8"
                                     Margin="0 0 0 15"/>

                            <!-- Категория -->
                            <TextBlock Text="Категория:" Margin="0 0 0 5"/>
                            <ComboBox ItemsSource="{Binding Categories}"
                                      DisplayMemberPath="Title"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding CurrentService.ServiceCategoryId}"
                                      Margin="0 0 0 15"/>

                            <!-- Тип услуги -->
                            <TextBlock Text="Тип услуги:" Margin="0 0 0 5"/>
                            <ComboBox ItemsSource="{Binding ServiceTypes}"
                                      SelectedValue="{Binding CurrentService.Type}"
                                      Margin="0 0 0 15"/>

                            <!-- Краткое описание -->
                            <TextBlock Text="Краткое описание:" Margin="0 0 0 5"/>
                            <TextBox Text="{Binding CurrentService.DescriptionShort}"
                                     FontSize="14"
                                     Padding="8"
                                     Margin="0 0 0 15"
                                     Height="60"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"/>

                            <!-- Полное описание -->
                            <TextBlock Text="Полное описание:" Margin="0 0 0 5"/>
                            <TextBox Text="{Binding CurrentService.Description}"
                                     FontSize="14"
                                     Padding="8"
                                     Margin="0 0 0 15"
                                     Height="120"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"/>

                            <!-- Кнопка сохранения -->
                            <Button Content="Сохранить"
                                    HorizontalAlignment="Right"
                                    Width="120"
                                    Height="40"
                                    Background="#3A84F4"
                                    Foreground="White"
                                    FontSize="14"
                                    Margin="0 20 0 0"
                                    Click="SaveButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>