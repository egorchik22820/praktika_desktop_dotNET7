<Page x:Class="praktika_desktop_dotNET7.Pages.Admin.AdminServiceInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika_desktop_dotNET7.Pages.Admin"
      xmlns:converters="clr-namespace:praktika_desktop_dotNET7.Convert"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminServiceInfoPage">

    <Page.Resources>
        <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter" />

    </Page.Resources>

    <Grid Background="#FFF">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Кнопка назад в стиле вашего проекта -->
                <Button Content="Назад"
                    HorizontalAlignment="Left"
                    Width="80"
                    Height="30"
                    Margin="0 0 0 20"
                    Background="#3A84F4"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Click="BackButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Основной контент -->
                <Border Background="#FFF"
                    CornerRadius="10"
                    Padding="20"
                    BorderBrush="#DDD"
                    BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Картинка услуги -->
                        <Border Grid.Column="0"
                            Width="300"
                            Height="200"
                            CornerRadius="10"
                            Margin="0 0 20 0"
                            Background="#F5F5F5"
                            ClipToBounds="True">
                            <Image Source="{Binding ServiceImage}"
                               Stretch="UniformToFill"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Clip>
                                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,300,200"/>
                                </Image.Clip>
                            </Image>
                        </Border>

                        <!-- Текстовая информация -->
                        <StackPanel Grid.Column="1">
                            <!-- Название -->
                            <TextBlock Text="{Binding Title}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   Margin="0 0 0 10"/>

                            <!-- Категория и тип -->
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                                <Border Background="#3A84F4"
                                    CornerRadius="4"
                                    Padding="5 2">
                                    <TextBlock Text="{Binding ServiceCategory.Title}"
                                           Foreground="White"
                                           FontSize="12"/>
                                </Border>

                                <Border Background="#4CAF50"
                                    CornerRadius="4"
                                    Padding="5 2"
                                    Margin="10 0 0 0">
                                    <TextBlock Text="{Binding Type}"
                                           Foreground="White"
                                           FontSize="12"/>
                                </Border>
                            </StackPanel>

                            <!-- Краткое описание -->
                            <TextBlock Text="{Binding DescriptionShort}"
                                   FontSize="14"
                                   Foreground="#555"
                                   TextWrapping="Wrap"
                                   Margin="0 0 0 20"/>

                            <!-- Полное описание -->
                            <TextBlock Text="Полное описание:"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#333"
                                   Margin="0 0 0 5"/>

                            <Border Background="#FAFAFA"
                                CornerRadius="5"
                                Padding="10"
                                BorderBrush="#EEE"
                                BorderThickness="1">
                                <TextBlock Text="{Binding Description}"
                                       FontSize="13"
                                       Foreground="#444"
                                       TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
