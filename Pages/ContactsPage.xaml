<Page x:Class="praktika_desktop_dotNET7.Pages.ContactsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika_desktop_dotNET7.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Page.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <!-- Sidebar -->
                <ColumnDefinition/>
                <!-- Main Content -->
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Background="#F5F5F5" Padding="20" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Добро пожаловать!" FontSize="18" FontWeight="Bold" Margin="0 0 0 10" Foreground="#444"/>
                    <TextBlock Text="Узнайте больше о наших услугах и предложениях прямо сейчас." 
                               FontSize="14" Foreground="#666" TextWrapping="Wrap" Margin="0 0 0 20"/>
                    <Button Content="Перейти к услугам" 
                            Background="#3A84F4" 
                            Foreground="White"
                            Padding="8,4"
                            FontSize="14"
                            BorderThickness="0"
                            Width="170"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,10">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <!-- MAIN AREA -->
            <StackPanel Grid.Column="1" Margin="30" VerticalAlignment="Top">
                <TextBlock Text="Контакты"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333"/>
                <TextBlock Text="Телефон: +7 (777) 777-77-77"
                           FontSize="16"
                           Foreground="#666"/>
                <TextBlock Text="Email: contact@mycompany.com"
                           FontSize="16"
                           Foreground="#666"/>
            </StackPanel>
        </Grid>

        
    </Grid>
</Page>
