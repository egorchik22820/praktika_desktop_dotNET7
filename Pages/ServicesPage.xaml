<Page x:Class="praktika_desktop_dotNET7.Pages.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika_desktop_dotNET7.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicesPage">

    <Grid>
        <!--TODO:   Services from database
                    autorization(for admin) button here and page
                    if admin: can change this page and data-->

        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- ListView Услуг -->
            <ListView x:Name="ServicesListView"
              ItemsSource="{Binding Services}"
              Grid.Column="0"
              Background="Transparent"
              BorderThickness="0"
              Margin="0 0 10 0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFF"
                        CornerRadius="10"
                        Margin="0 5"
                        Padding="10"
                        BorderBrush="#DDD"
                        BorderThickness="1">
                            <DockPanel>
                                <!-- Картинка -->
                               <Image Source="/Pages/ImgForPages/cat.jpg/"
                               Width="100"
                               Height="100"
                               Stretch="UniformToFill"
                               Margin="0 0 10 0"
                               VerticalAlignment="Top"
                               ClipToBounds="True">
                                    <Image.Clip>
                                        <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,100,100"/>
                                    </Image.Clip>
                                </Image>

                                <!-- Текстовая часть -->
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#333"/>

                                    <TextBlock Text="{Binding ServiceCategory.Title}"
                                       FontSize="14"
                                       Foreground="#666"
                                       Margin="0,4,0,0"/>

                                    <TextBlock Text="{Binding DescriptionShort}"
                                       FontSize="13"
                                       Foreground="#555"
                                       TextWrapping="Wrap"
                                       Margin="0,6,0,0"
                                       MaxHeight="60"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Кнопка Войти -->
            <StackPanel Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Top" Cursor="">
                <Button Content="Войти"
                Width="120"
                Height="40"
                Background="#3A84F4"
                Foreground="White"
                FontSize="14"
                Margin="0,10,0,0"
                Padding="8,4"
                BorderThickness="0"
                Cursor="Hand"
                Click="LoginButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2C6DD8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>


    </Grid>
</Page>
